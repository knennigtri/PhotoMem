<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ButtonContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/startButton"
            android:background="@drawable/red_button"
            style="@style/ButtonText"
            android:text="@string/startMem_button_start_game" />

        <Button
            android:id="@+id/practiceButton"
            android:background="@drawable/red_button"
            style="@style/ButtonText"
            android:text="@string/startMem_button_practice" />
        
        <Button
            android:id="@+id/addPhotoButton"
            android:background="@drawable/red_button"
            style="@style/ButtonText"
            android:text="@string/startMem_button_add_photo" />

        <Button
            android:id="@+id/editButton"
            android:background="@drawable/red_button"
            style="@style/ButtonText"
            android:text="@string/startMem_button_edit_mode" />

        <Button
            android:id="@+id/backButton"
            android:background="@drawable/red_button"
            style="@style/ButtonText"
            android:text="@string/startMem_button_prev_activity" />
    </LinearLayout>

</RelativeLayout>