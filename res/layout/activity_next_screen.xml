<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/showAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="38dp"
        android:text="@string/showAnswer" />

    <Button
        android:id="@+id/nextPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/showAnswer"
        android:layout_alignBottom="@+id/showAnswer"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/showAnswer"
        android:text="@string/nextPicture" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/showAnswer"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="14dp"
        android:layout_marginRight="34dp"
        android:text="@string/defaultText"
        tools:context=".NextScreen" />

	<LinearLayout
	    android:id="@+id/pictureLayout"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginLeft="15dp"
	    android:layout_marginRight="15dp"
	    android:layout_marginTop="15dp"
	    android:layout_marginBottom="15dp"
	    android:layout_above="@id/textView1"
	    android:orientation="vertical" >

	    <ImageView
	        android:id="@+id/imageViewPhoto"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_gravity="center"
	        android:scaleType="center" />
	</LinearLayout>

</RelativeLayout>
